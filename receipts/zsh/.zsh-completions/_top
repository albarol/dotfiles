#compdef top

_top() {

  local curcontext="$curcontext" state line
  typeset -A opt_args

  _arguments -C -W \
    "-b[Starts top in batch mode]"\
    "-c[Starts top with the last remembered \`c\` state reversed]"\
    "-d[Specificies the delay between screen updates.]"\
    "-H[Instructs top to display individual threads]"\
    "-i[Starts top with the last remembered \`i\` state reversed]"\
    "-n[Specifies the maximum number of iterations]"\
    "-o[Specifies the name of the field which tasks will be stored.]"\
    "-O[This options acts as a form of help for the -o option]"\
    "-p[Monitor only processes with specified process IDs]"\
    "-s[Starts top with secure mode forced]"\
    "-S[Starts top with the last remembered \`S\` state reversed]"\
    "-u[Display only processes with a user id or user name]"\
    "-h[Show library usage prompt]"\
    "-v[Show library version]"\
}

_top "$@"
